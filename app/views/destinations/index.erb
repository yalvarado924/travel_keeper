<h1><%=current_user.name%>'s Destinations</h1>

<a href="/destinations/new">Add a Destination</a>

<%@destinations.each do |d|%>

    <% if current_user %>
    <h2><a href="/destinations/<%=d.id%>"><%=d.name%></a></h2>
        <img src="<%=d.image%>" alt = "destination">
        <%end%>
        <br><br>
    <% if current_user == d.user %>
        <a href="/destinations/<%=d.id%>/edit">Edit</a>
        <a href="/destinations/<%=d.id%>/delete">Delete</a>
    <%end%>
<%end%>

